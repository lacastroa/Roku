          vertAlign="center"
          width="1920"
          height="300"
          color="0xD0BCFeff"/>
        <LayoutGroup
          id="profileSelector"
          LayoutDirection="horiz"
          itemSpacings="[50]"
          translation="[85, 300]">
          <profileItem
            id="profileItem1"/>
